{
  "anomaly_scenarios": {
    "transaction_service": {
      "suspicious_transactions": {
        "description": "High-value transactions from unusual locations",
        "indicators": {
          "amount_threshold": 10000,
          "unusual_countries": ["XX", "ZZ", "KY"],
          "frequency_burst": 5,
          "time_window_minutes": 10
        },
        "severity": "high"
      },
      "fraud_patterns": {
        "description": "Structured fraud with multiple small transactions",
        "indicators": {
          "amount_range": [100, 500],
          "transaction_count": 20,
          "time_window_minutes": 30,
          "same_merchant": true
        },
        "severity": "critical"
      },
      "money_laundering": {
        "description": "Layering technique with multiple accounts",
        "indicators": {
          "round_amounts": true,
          "multiple_accounts": 5,
          "rapid_succession": true,
          "time_window_minutes": 5
        },
        "severity": "critical"
      }
    },
    "auth_service": {
      "brute_force_attack": {
        "description": "Multiple failed login attempts",
        "indicators": {
          "failed_attempts": 10,
          "time_window_minutes": 5,
          "same_username": true,
          "different_ips": true
        },
        "severity": "high"
      },
      "credential_stuffing": {
        "description": "Automated login attempts with stolen credentials",
        "indicators": {
          "success_rate": 0.02,
          "attempts_per_minute": 50,
          "user_agent_variety": true,
          "geographic_distribution": true
        },
        "severity": "medium"
      },
      "unusual_location": {
        "description": "Login from impossible geographic locations",
        "indicators": {
          "impossible_travel": true,
          "time_between_logins_hours": 1,
          "distance_km": 1000,
          "same_device": true
        },
        "severity": "medium"
      }
    },
    "monitoring_service": {
      "resource_exhaustion": {
        "description": "System resources reaching critical levels",
        "indicators": {
          "cpu_threshold": 90,
          "memory_threshold": 85,
          "disk_threshold": 95,
          "duration_minutes": 5
        },
        "severity": "high"
      },
      "cascade_failure": {
        "description": "Multiple services failing simultaneously",
        "indicators": {
          "failed_services": 3,
          "time_window_seconds": 30,
          "dependency_chain": true,
          "error_propagation": true
        },
        "severity": "critical"
      },
      "performance_degradation": {
        "description": "Gradual slowdown in response times",
        "indicators": {
          "response_time_increase": 300,
          "baseline_percent": 50,
          "duration_minutes": 15,
          "throughput_drop": 0.3
        },
        "severity": "medium"
      }
    }
  },
  "normal_patterns": {
    "business_hours": {
      "peak_hours": [9, 10, 11, 14, 15, 16],
      "low_hours": [22, 23, 0, 1, 2, 3, 4, 5],
      "weekend_factor": 0.3
    },
    "seasonal_patterns": {
      "holiday_multiplier": 1.5,
      "month_end_multiplier": 1.3,
      "quarter_end_multiplier": 1.8
    },
    "customer_behavior": {
      "retail_avg_transactions": 15,
      "business_avg_transactions": 50,
      "premium_avg_transactions": 100,
      "session_duration_minutes": 20
    }
  }
}
