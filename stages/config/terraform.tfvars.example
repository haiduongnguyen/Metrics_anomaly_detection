# Terraform Variables Configuration
# Copy this file to terraform.tfvars and modify as needed

# Environment Configuration
environment = "local"
region = "us-east-1"

# LocalStack Configuration (for local development)
localstack_enabled = true
localstack_host = "localhost"
localstack_edge_port = 4566

# AWS Configuration (for AWS deployment)
aws_enabled = false
aws_account_id = ""
aws_profile = "default"

# Project Configuration
project_name = "banking-anomaly-detection"
tags = {
    Environment = "local"
    Project = "banking-anomaly-detection"
    Owner = "devops"
}

# Infrastructure Configuration
create_vpc = true
vpc_cidr = "10.0.0.0/16"
public_subnet_cidrs = ["10.0.1.0/24", "10.0.2.0/24"]
private_subnet_cidrs = ["10.0.10.0/24", "10.0.20.0/24"]

# Storage Configuration
s3_buckets_enabled = true
raw_data_retention_days = 90
transformed_data_retention_days = 365

# Streaming Configuration
kinesis_enabled = true
kinesis_shard_count = 1

# Compute Configuration
lambda_enabled = true
lambda_memory_size = 128
lambda_timeout_seconds = 60

# Database Configuration
redis_enabled = true
redis_node_type = "cache.t3.micro"
redis_port = 6379

# Monitoring Configuration
cloudwatch_enabled = true
monitoring_interval_seconds = 60

# Security Configuration
encryption_enabled = true
access_logging_enabled = true
